<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <div class=post-container>
                <%- posts %>
                    <hr>
                    <form id="commentForm" action="/forum/comment" method="post">
                        <label for="comment_content">
                            Comment:
                        </label>
                        <textarea minlength="1" name="comment_content" id="comment_content" <% if(locals.comment_content) { %> value="<%= locals.comment_content %>"
                            <% } %> required>
 </textarea>
                        <input type="hidden" name="comment_date" value="<%- currentDate %>">
                        <input type="hidden" name="account_id" value="<%- account_id %>">
                        <button type="submit" class="submit">
                            Post
                        </button>
                    </form>
            </div>