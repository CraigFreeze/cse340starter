<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>

            <form action="/account/register" method="post" id="registerForm">
                <fieldset>
                    <p>All fields are required.</p>
                    <label for="account_firstname">First name:</label>
                    <input type="text" name="account_firstname" required>

                    <label for="account_lastname">Last name:</label>
                    <input type="text" name="account_lastname" required>

                    <label for="account_email">Email Address:</label>
                    <input type="email" name="account_email" required>

                    <label for="account_password">Password:</label>
                    <input type="password" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$"
                        name="account_password" required>
                    <p>Minimum eight characters, at least one letter, one number and one special character:</p>

                    <button type="submit">Login</button>

                </fieldset>
            </form>