<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>


        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <form action="/account/accountUpdate" method="post" id="updateForm">
                        <fieldset>
                            <p>All fields are required.</p>
                            <label for="account_firstname">First Name</label>
                            <input type="text" name="account_firstname" pattern="[A-Za-z ]{1,}" id="account_firstname"
                                value="<%= locals.account_firstname %>" required>

                            <label for="account_lastname">Last Name</label>
                            <input type="text" name="account_lastname" pattern="[A-Za-z ]{1,}" id="account_lastname"
                                value="<%= locals.account_lastname %>" required>

                            <label for="account_email">Email</label>
                            <input type="email" name="account_email" id="account_email"
                                value="<%= locals.account_email %>" required>

                            <button type="submit">Edit Account</button>
                            <!-- <button type="submit" disabled>Edit Account</button> -->

                            <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>"
                                <% } %>>

                        </fieldset>

                        <!-- <script src="../../js/inv-update.js"></script> -->
                    </form>

                    <form action="/account/changePassword" method="post" id="registerForm">
                        <fieldset>
                            <p>By supplying a password here, your current password will be overwritten.</p>
                            <label for="account_password">Password:</label>
                            <input type="password"
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                                name="account_password" id="account_password" required>
                            <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter
                                and 1
                                special character</p>

                            <button type="submit">Change Password</button>

                            <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>"
                                <% } %>>

                        </fieldset>
                    </form>