<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>


        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <form action="/inv/delete" method="post" id="deleteForm">
                        <fieldset>
                            <p>Confirm Deletion - The delete is permanent.</p>
                            <label for="classification_id">Classification</label>

                                <label for="inv_make">Make</label>
                                <input type="text" name="inv_make" pattern="[A-Za-z0-9 ]{3,}" id="inv_make"
                                    value="<%= locals.inv_make %>" placeholder="Min of 3 characters" required readonly>

                                <label for="inv_model">Model</label>
                                <input type="text" name="inv_model" pattern="[A-Za-z0-9 ]{3,}" id="inv_model"
                                    value="<%= locals.inv_model %>" placeholder="Min of 3 characters" required readonly>

                                <label for="inv_price">Price</label>
                                <!-- ([0-9]*[\.]{0,1}[0-9]{0,2}) -->
                                <input type="text" name="inv_price" pattern="^[1-9]\d*(\.\d+)?$"
                                    value="<%= locals.inv_price %>" id="inv_price" placeholder="decimal or integer"
                                    required readonly>

                                <label for="inv_year">Year</label>
                                <input type="text" name="inv_year" pattern="^\d{4}$" id="inv_year"
                                    value="<%= locals.inv_year %>" placeholder="4-digit year" maxlength="4" required readonly>

                                <p>Alphabetic Characters Only</p>

                                <button type="submit">Delete Vehicle</button>

                                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" 
                                <% } %>>

                        </fieldset>
                    </form>